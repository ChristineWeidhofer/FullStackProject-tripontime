{% extends 'base.html.twig' %}

{% block title %}Features index
{% endblock %}

{% block body %}
	<h1>Features index</h1>

	<table class="table">
		<thead>
			<tr>
				<th>Id</th>
				<th>actions</th>
			</tr>
		</thead>
		<tbody>
			{% for feature in features %}
				<tr>
					<td>{{ feature.id }}</td>
					<td>
						<a href="{{ path('app_features_show', {'id': feature.id}) }}">show</a>
						<a href="{{ path('app_features_edit', {'id': feature.id}) }}">edit</a>
					</td>
				</tr>
			{% else %}
				<tr>
					<td colspan="2">no records found</td>
				</tr>
			{% endfor %}
		</tbody>
		<form action="{{ path('app_features_new') }}" method="post">
			<button type="submit">Create new feature</button>
		</form>
	</table>

	<a href="{{ path('app_features_new') }}">Create new</a>
{% endblock %}
