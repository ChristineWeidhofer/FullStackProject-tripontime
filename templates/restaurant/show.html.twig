{% extends 'base.html.twig' %}

{% block title %}Restaurant
{% endblock %}
{% block stylesheets %}
	<link rel="stylesheet" href="{{ asset("css/about.css") }}">
	<link rel="stylesheet" href="{{ asset("css/admin.css") }}">

{% endblock %}

{% block body %}
	{% include "components/navbar.html" %}

	<div class="backColor w-75 mx-auto">
		<div class="container">
			<h1>{{ restaurant.name }}</h1>

			<div class="card-wrapper w-100 w-md-75 mx-auto ">
				<div class="card border-0 p-0 m-0d-flex flex-column flex-md-row">
					<div class="wrap-pic w-100 w-md-50">
						<img src="{{ restaurant.image }}" class="card-img-to w-100" alt="{{ restaurant.name }}" style="aspect-ratio:1;object-fit:cover">
					</div>
					<div class="wrap-body w-100 w-md-50">
						<div class="card-body">
							<h5 class="card-title">{{ restaurant.name }}</h5>
							<p class="card-text">{{ restaurant.description }}</p>
						</div>
						<div class="card-body d-flex justify-content-center align-items-center">

							<a href="{% if is_granted('ROLE_ADMIN') %}{{ path('app_admin_index') }}{% else %}{{ path('app_user_profile') }}{% endif %}" class="btn btn-outline-dark rounded-0 mx-2">Back to my account</a>

							<a href="{{ path('app_restaurant_index') }}" class="btn btn-outline-dark rounded-0 mx-2">Back to list</a>
							<a href="{{ path('app_restaurant_edit', {'id': restaurant.id}) }}" class="btn btn-outline-dark rounded-0 mx-2">Edit</a>
							{% if is_granted('ROLE_ADMIN') %}
								{{ include('restaurant/_delete_form.html.twig') }}
							{% endif %}
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
{% endblock %}
