{% extends 'base.html.twig' %}

{% block title %}Activity
{% endblock %}
{% block stylesheets %}
	<link rel="stylesheet" href="{{ asset("css/about.css") }}">
	<link rel="stylesheet" href="{{ asset("css/admin.css") }}">

{% endblock %}
{% block body %}
	{% include "components/navbar.html" %}

	<div class="backColor w-75 mx-auto">
		<div class="container">
			<h1>{{ activity.name }}</h1>

			<div class="card-wrapper w-100 w-md-75 mx-auto ">
				<div class="card border-0 p-0 m-0d-flex flex-column flex-md-row">
					<div class="wrap-pic w-100 w-md-50">
						<img src="{{ activity.image }}" class="card-img-to w-100" alt="{{ activity.name }}" style="aspect-ratio:1;object-fit:cover; border-radius: 10px;">
					</div>
					<div class="wrap-body w-100 w-md-50">
						<div class="card-body">
							<h5 class="card-title">{{ activity.name }}</h5>
							<p class="card-text">{{ activity.description }}</p>
						</div>
						<div class="card-body">
							<table class="table">
								<tbody>
									<tr>
										<td style="font-weight: bold;">Website</td>
										<td>{{ activity.website }}</td>
									</tr>
									<tr>
										<td style="font-weight: bold;">Capacity</td>
										<td>{{ activity.capacity }}</td>
									</tr>
									<tr>
										<td style="font-weight: bold;">Review</td>
										<td>{{ activity.review }}</td>
									</tr>
								</tbody>
							</table>
						</div>
						<div class="card-body d-flex justify-content-center align-items-center">

							<a href="{% if is_granted('ROLE_ADMIN') %}{{ path('app_admin_index') }}{% else %}{{ path('app_user_profile') }}{% endif %}" class="btn btn-outline-dark rounded-0 mx-2">Back to my account</a>

							<a href="{{ path('app_activity_index') }}" class="btn btn-outline-dark rounded-0 mx-2">Back to list</a>
							<a href="{{ path('app_activity_edit', {'id': activity.id}) }}" class="btn btn-outline-dark rounded-0 mx-2">Edit</a>
							{% if is_granted('ROLE_ADMIN') %}
								{{ include('activity/_delete_form.html.twig') }}
							{% endif %}
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>


</div>{% endblock %}
