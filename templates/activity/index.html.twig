{% extends 'base.html.twig' %}

{% block title %}Activity index
{% endblock %}

{% block body %}
	<h1>Activity index</h1>

	<table class="table">
		<thead>
			<tr>
				<th>Id</th>
				<th>Name</th>
				<th>Image</th>
				<th>Description</th>
				<th>Website</th>
				<th>Capacity</th>
				<th>Review</th>
				<th>actions</th>
			</tr>
		</thead>
		<tbody>
			{% for activity in activities %}
				<tr>
					<td>{{ activity.id }}</td>
					<td>{{ activity.name }}</td>
					<td>{{ activity.image }}</td>
					<td>{{ activity.description }}</td>
					<td>{{ activity.website }}</td>
					<td>{{ activity.capacity }}</td>
					<td>{{ activity.review }}</td>
					<td>
						<a href="{{ path('app_admin_index') }}">Back to my account</a>
						<a href="{{ path('app_activity_show', {'id': activity.id}) }}">show</a>
						<a href="{{ path('app_activity_edit', {'id': activity.id}) }}">edit</a>
					</td>
				</tr>
			{% else %}
				<tr>
					<td colspan="8">no records found</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>

	<a href="{{ path('app_activity_new') }}">Create new</a>
{% endblock %}
