<form method="post" action="{{ path('app_user_delete', {'id': user.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ user.id) }}">
    <button class="btn" style="width: 8rem;	font-size: 1.125rem;padding: 0.625rem; border: 2px solid #000000; background-color: unset; cursor: pointer; border-radius: 0; margin-top: 1rem; margin-bottom: 1rem;">Delete</button>
</form>
