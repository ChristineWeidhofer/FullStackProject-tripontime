{% extends 'base.html.twig' %}

{% block title %}Edit User
{% endblock %}
{% block stylesheets %}
	<link rel="stylesheet" href="{{ asset("css/about.css") }}">
	<link rel="stylesheet" href="{{ asset("css/admin.css") }}">
	<link rel="stylesheet" href="{{ asset("css/footer.css") }}">
	<style>
		label {
			font-weight: bold;
			margin-bottom: 0.31rem;
			color: rgb(0, 0, 0);
		}
	</style>
{% endblock %}

{% block body %}
	{% include "components/navbar.html" %}

	<div class="container w-75">
		<h1>Edit
			{{user.firstName}}
			{{user.lastName}}</h1>

		{{ include('user/_form.html.twig', {'button_label': 'Update'}) }}

		<button class="btnHover mt-3" style="margin-left:0 !important;" onmouseover="this.style.backgroundColor='rgb(232, 150, 106)'" onmouseout="this.style.backgroundColor='rgb(85,56,38)'">

			<a href="{{ path('app_admin_index') }}">Back to list</a>
		</button>

		{{ include('user/_delete_form.html.twig') }}
	</div>
{% endblock %}
