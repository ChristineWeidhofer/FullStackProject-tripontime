{% extends 'base.html.twig' %}

{% block title %}Edit Journal{% endblock %}
{% block stylesheets %}
	<link rel="stylesheet" href="{{ asset("css/about.css") }}">
	<link rel="stylesheet" href="{{ asset("css/admin.css") }}">
	<link rel="stylesheet" href="{{ asset("css/footer.css") }}">
	<style>
		label {
			font-weight: bold;
			margin-bottom: 0.31rem;
			color: rgb(0, 0, 0);
		}
	</style>
{% endblock %}

{% block body %}
    {% include "components/navbar.html" %}

<div class="container w-75">
    <h1>Edit {{journal.name}}</h1>

    {{ include('journal/_form.html.twig', {'button_label': 'Update'}) }}

    <button class="btnHover mt-3" onmouseover="this.style.backgroundColor='rgb(232, 150, 106)'" onmouseout="this.style.backgroundColor='rgb(85,56,38)'">
